datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  bookmarks Json? // Stores bookmarked recipe IDs as JSON
  recipes   Recipe[] // Define the relation back to Recipe
  createdAt DateTime @default(now())
}

model Recipe {
  id        String   @id @default(uuid())
  title     String
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
